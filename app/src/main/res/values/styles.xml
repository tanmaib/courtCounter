<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>

    </style>

    <style name="TextView_1">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Text_Margin_Top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/Team_Name</item>
        <item name="android:textSize">@dimen/textSizeName</item>
    </style>

    <style name="TextView_2">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Text_Margin_Top</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/Score</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
    </style>

    <style name="Button_1">
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <!--  <item name="android:layout_marginTop">@dimen/Button_Margin_Top</item> -->
        <item name="android:layout_marginLeft">@dimen/Button_Margin_Left</item>
        <item name="android:layout_marginRight">@dimen/Button_Margin_Right</item>
        <item name="android:textSize">@dimen/textSizeName</item>
    </style>

